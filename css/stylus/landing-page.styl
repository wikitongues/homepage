.index
    h1
        margin 30px auto 50px auto
        text-align center

    .youTubeLink
        display inline-block

        img
            float left
            border-radius $radius $radius 0 0

        &:hover
            .triangle
                top 257px

            p
                background $hover

        .triangle
            position relative
            z-index 2
            top 260px
            width 0
            margin auto
            right -50%
            margin -27px
            height 0
            border-style solid
            border-width: 32.5px 0 32.5px 56.3px;
            border-color transparent transparent transparent #fff

        p
            button()
            border-radius 0 0 $radius $radius
            float left
            max-width none
            width 900px
            margin auto
            display block

    p
        display block