.guidelines, .termsOfService, .publicityClause
  display none

  .page
    width 100%
    display inline-block
    font-size 67.5%
    background #eee !important
    padding 20px 20px 3em 20px

    h1
      margin-top 0
      float left

    button
      button()
      background white
      float right
      margin-top 0
      width initial
      border none
      font-size 1em

      &:hover
        color $hover
        border none
        background white

    p
      float none

  p, h4, li
    clear both

  ul
    li
      h4
        font-size 1.5em
        margin-bottom 0em

      p
        margin .7em 0

  ol
    display inline-block

    li
      display list-item
      margin 1em 0 1em 2em
      line-height 1.8em
      max-width 700px

      a
        textLink()

  td
    width 25%
    padding 20px 40px
    text-align center
    background white
    border none

    &.label
      font-weight 800
