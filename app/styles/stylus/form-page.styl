$roboto = 'Roboto', sans-serif
$c2 = $hover
$c3 = #A9A9A9
$c4 = #E5E5E6

t()
  transition 0.2s ease all

l()
  color $c3
  font-size 18px
  font-weight 100

@keyframes inputHighlighter
  from
    background $c2

  to
    width 0
    background transparent

#form-page
  width 100%
  display inline-block

  *
    font-family $roboto

  h1
    font-weight bold
    width 960px
    margin auto
    font-weight 3em

  form
    max-width 960px
    margin 30px auto

    .grouping
      width 66.6%
      float left
      padding 0
      margin 0 0 50px 0
      display inline-block

      h2
        font-weight bold
        font-size 24px
        margin 0

      .input
        position relative
        margin-top 35px
        float left

        &.col-1
          width 50%

          &:nth-of-type(1)
            padding-right 11px

          &:nth-of-type(2)
            padding-left 11px

            label
              left 20px

        &.col-2
          width 100%

        textarea
          resize vertical

        input, textarea
          display block

        input, textarea, .hiddenDiv
          font-size 18px
          margin-top 11px
          min-height 32px
          font-family $roboto
          color black
          padding 0 10px 10px 10px
          width 100%
          border none
          border-bottom 1px solid $c4

          &:focus
            outline none

            & ~ .bar
              &:before, &:after
                width 50%

            & ~ .highlight
              animation inputHighlighter 0.3s ease

          &:focus ~ label, &:valid ~ label
            top -11px
            font-size 12px
            font-weight 200
            color black

        label
          l()
          position absolute
          pointer-events none
          left 10px
          top 5px
          t()

        .bar
          position relative
          display block
          width 100%

          &:before, &:after
            content ''
            height 3px
            width 0
            bottom 0
            position absolute
            background $c2
            t()

          &:before
            left 50%

          &:after
            right 50%

        .highlight
          position absolute
          height 25px
          width 25px
          border-radius 100%
          top 12px
          left 0
          pointer-events none
          opacity .5

      fieldset
        border none
        padding 0 0 0 10px
        margin 35px 0 0 0

        legend
          l()
          margin-bottom 10px

        ul
          list-style-type none
          margin 0
          padding 0

          li
            padding 10px 0

            label
              color $c3

            input:checked ~ label
              color black

      .checkbox
        a
          float right
          color #3B99FC

        input
          width auto
          float left
          margin-top 3px !important
          min-height initial

          &:focus ~ label, &:valid ~ label
            top initial
            font-size 18px
            font-weight 100
            color $c3

        label
          margin-left 10px
          float left
          position initial

.noscroll
  overflow hidden

.hiddenDiv
  display none
  white-space pre-wrap
  word-wrap break-word
